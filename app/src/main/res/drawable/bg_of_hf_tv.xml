<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item android:drawable="@android:color/white" />

    <!-- Black strokes -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/app_color" /> <!-- Black stroke -->
            <corners android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" />
        </shape>

    </item>

    <!-- Transparent stroke (blank side) -->
    <item  android:bottom="2dp"  android:left="2dp" android:right="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Transparent stroke -->
            <corners android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" />
        </shape>
    </item>
</layer-list>



